<div class="modal fade" id="{{modal_id}}">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
          </button>
          <h4 class="modal-title">
            <strong>Send Love</strong> to recognize someone for a job well done.
          </h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-3">
              <label for="to_user">To</label>
              <div class="input-group">
                <input type="text" name="to" id="to" class="form-control" style="z-index:2000;">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <label for="love_message">For</label>
              <textarea class="form-control" name="love_message" id="love_message"></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" name="send_love" >
            Send Love
          </button>
          <button type="cancel" class="btn btn-primary" name="cancel">
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
